{
    "version": 2,
    "rewrites": [
      { "source": "/api/.*", "destination": "/src/server/server.js" },
      { "source": "/(.*)", "destination": "/$1" }
    ],
    "headers": [
      {
        "source": "/api/comments",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      }
    ]
  }
  